import discord

client = discord.Client()

@client.event
async def on_ready():
    print('Bot logado como: {0.user}'.format(client))

@client.event
async def on_message(message):
    if message.author == client.user:
        return

    if message.content.startswith('$'):
        #FormataÃ§Ã£o: $play link
        mensagem_separada = message.content.split()

        if mensagem_separada[0].lower() == '$play':
            link = mensagem_separada[-1]
            await message.channel.send('Ok')

client.run('token')
